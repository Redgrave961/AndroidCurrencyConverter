<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Light) -->
    <style name="Theme.Currencyconverter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/app_red</item>
        <item name="colorPrimaryVariant">@color/app_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/app_red</item>
        <item name="colorSecondaryVariant">@color/app_red_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Card style -->
        <item name="cardBackgroundColor">@color/white</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_700</item>
    </style>
</resources>